{
  "manifest_version": 3,
  "name": "Intuitive Video Speedup",
  "version": "1.1",
  "description": "Intuitive joystick-style speed and volume control for any HTML5 video. Hover, drag, scroll â€” no menus needed.",
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["gsap.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "intuitive-video-speedup@local",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
